{# Floating CTA Button #}
<button
  data-floating-cta
  onclick="scrollToSection('courses')"
  class="fixed bottom-6 right-6 z-40 px-8 py-4 bg-gradient-to-r from-pistachio to-green-600 text-white rounded-full shadow-2xl hover:shadow-3xl transform hover:scale-110 transition-all duration-300 translate-y-20 opacity-0 pointer-events-none"
  data-i18n="floatingCta"
>
  Enroll Now
</button>

{# Scroll to Top Button #}
<button
  data-scroll-top
  onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
  class="fixed bottom-24 right-6 z-40 w-12 h-12 bg-navy text-white rounded-full shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300 flex items-center justify-center translate-y-20 opacity-0 pointer-events-none"
  aria-label="Scroll to top"
>
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
  </svg>
</button>
