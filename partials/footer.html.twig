{# Footer #}
<footer class="bg-navy text-white pt-16 pb-8{% block footer_extra_class %}{% endblock %}">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
      <!-- Logo and Description -->
      <div class="md:col-span-2">
        <div class="flex items-center gap-2 mb-4">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-pistachio to-white flex items-center justify-center">
            <span class="font-bold text-navy text-lg">{{ config.site.logo_text|default('FA') }}</span>
          </div>
          <span class="font-bold text-2xl" data-i18n="nav.brand">
            {{ config.site.name|default('Farabi Academy') }}
          </span>
        </div>
        <p class="text-gray-300 leading-relaxed mb-6" data-i18n="footer.description">
          Empowering learners worldwide with quality online education.
        </p>
        
        <!-- Contact Info -->
        <div class="space-y-2 text-gray-300">
          <p>&#x1F4E7; {{ config.site.email|default('info@farabiacademy.com') }}</p>
          <p>&#x1F4DE; {{ config.site.phone|default('+1 (555) 123-4567') }}</p>
          <p>&#x1F4CD; {{ config.site.address|default('123 Education Street, Learning City') }}</p>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-bold text-xl mb-6" data-i18n="footer.quickLinks">Quick Links</h3>
        <ul class="space-y-3">
          <li>
            <a
              href="{{ page_path|default('') }}index.html#about"
              class="text-gray-300 hover:text-pistachio transition-colors"
              data-i18n="nav.aboutUs"
            >
              About Us
            </a>
          </li>
          <li>
            <a
              href="{{ page_path|default('') }}courses.html"
              class="text-gray-300 hover:text-pistachio transition-colors"
              data-i18n="nav.ourCourses"
            >
              Our Courses
            </a>
          </li>
          <li>
            <a
              href="{{ page_path|default('') }}index.html#reviews"
              class="text-gray-300 hover:text-pistachio transition-colors"
              data-i18n="nav.successStories"
            >
              Success Stories
            </a>
          </li>
          <li>
            <a
              href="{{ page_path|default('') }}index.html#contact"
              class="text-gray-300 hover:text-pistachio transition-colors"
              data-i18n="nav.contactUs"
            >
              Contact Us
            </a>
          </li>
        </ul>
      </div>

      <!-- Social Media -->
      <div>
        <h3 class="font-bold text-xl mb-6" data-i18n="footer.followUs">Follow Us</h3>
        <div class="flex gap-4">
          <a
            href="{{ config.social.facebook|default('#') }}"
            aria-label="Facebook"
            class="w-12 h-12 rounded-full bg-white/10 hover:bg-pistachio flex items-center justify-center transition-all transform hover:scale-110"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a
            href="{{ config.social.instagram|default('#') }}"
            aria-label="Instagram"
            class="w-12 h-12 rounded-full bg-white/10 hover:bg-pistachio flex items-center justify-center transition-all transform hover:scale-110"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a
            href="{{ config.social.twitter|default('#') }}"
            aria-label="Twitter"
            class="w-12 h-12 rounded-full bg-white/10 hover:bg-pistachio flex items-center justify-center transition-all transform hover:scale-110"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
          <a
            href="{{ config.social.tiktok|default('#') }}"
            aria-label="TikTok"
            class="w-12 h-12 rounded-full bg-white/10 hover:bg-pistachio flex items-center justify-center transition-all transform hover:scale-110"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-white/10 text-center text-gray-300">
      <p data-i18n="footer.copyright">&copy; 2026 {{ config.site.name|default('Farabi Academy') }}. All rights reserved.</p>
    </div>
  </div>
</footer>
