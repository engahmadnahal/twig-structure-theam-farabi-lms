{% extends '../layouts/base.html.twig' %}

{% block title %}{{ config.site.name|default('Farabi Academy') }} - Online Learning Platform{% endblock %}

{% block meta_description %}Farabi Academy - Transform Your Future with Excellence. Join thousands of students who have achieved their dreams through our world-class online academy.{% endblock %}

{% block content %}
    {# ==================== Hero Section ==================== #}
    <section id="hero" class="relative min-h-screen flex items-center pt-20 bg-gradient-to-br from-gray-50 to-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 w-full">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="space-y-8 animate-fade-in-up">
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 leading-tight" data-i18n="hero.title">
              Transform Your Future with Excellence
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed" data-i18n="hero.subtitle">
              Join thousands of students who have achieved their dreams through our world-class online academy. Expert instructors, proven methods, and a supportive community await you.
            </p>
            <div class="flex flex-wrap gap-4">
              <button
                onclick="scrollToSection('courses')"
                class="px-8 py-4 bg-pistachio text-white rounded-full hover:bg-pistachio-dark transition-all hover:shadow-xl transform hover:scale-105"
                data-i18n="hero.ctaButton"
              >
                Start Now
              </button>
              <button
                onclick="scrollToSection('about')"
                class="px-8 py-4 border-2 border-navy text-navy rounded-full hover:bg-navy hover:text-white transition-all transform hover:scale-105"
                data-i18n="nav.aboutUs"
              >
                About Us
              </button>
            </div>

            <!-- Quick Stats -->
            <div class="grid grid-cols-3 gap-6 pt-8">
              <div class="text-center">
                <div class="text-3xl font-bold text-pistachio">50K+</div>
                <div class="text-sm text-gray-600" data-i18n="stats.students">Students</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-pistachio">100+</div>
                <div class="text-sm text-gray-600" data-i18n="stats.courses">Courses</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-pistachio">98%</div>
                <div class="text-sm text-gray-600" data-i18n="stats.satisfaction">Satisfaction</div>
              </div>
            </div>
          </div>

          <!-- Right Content - Image Slider -->
          <div class="relative animate-fade-in-up animation-delay-300" data-slider="hero">
            <div class="relative rounded-3xl overflow-hidden shadow-2xl slider-container">
              <div class="slider-wrapper">
                <div class="slider-slide relative">
                  <div class="aspect-[4/3] relative">
                    <img src="https://images.unsplash.com/photo-1523240795612-9a054b0db644?w=1200&q=80" alt="Students learning online" class="w-full h-full object-cover" loading="lazy" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                  </div>
                </div>
                <div class="slider-slide relative">
                  <div class="aspect-[4/3] relative">
                    <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=1200&q=80" alt="Collaborative learning" class="w-full h-full object-cover" loading="lazy" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                  </div>
                </div>
                <div class="slider-slide relative">
                  <div class="aspect-[4/3] relative">
                    <img src="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?w=1200&q=80" alt="Online education" class="w-full h-full object-cover" loading="lazy" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                  </div>
                </div>
              </div>

              <!-- Custom Navigation -->
              <button class="slider-nav-prev absolute top-1/2 -translate-y-1/2 z-10 w-12 h-12 bg-white/90 rounded-full flex items-center justify-center hover:bg-white transition-all shadow-lg rtl:right-4 ltr:left-4" aria-label="Previous slide">
                <svg class="w-6 h-6 text-gray-800 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
              </button>
              <button class="slider-nav-next absolute top-1/2 -translate-y-1/2 z-10 w-12 h-12 bg-white/90 rounded-full flex items-center justify-center hover:bg-white transition-all shadow-lg rtl:left-4 ltr:right-4" aria-label="Next slide">
                <svg class="w-6 h-6 text-gray-800 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </button>

              <!-- Dots -->
              <div class="slider-dots absolute bottom-4 left-1/2 -translate-x-1/2"></div>
            </div>

            <!-- Decorative Elements -->
            <div class="absolute -z-10 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full">
              <div class="absolute top-0 right-0 w-72 h-72 bg-pistachio/20 rounded-full blur-3xl"></div>
              <div class="absolute bottom-0 left-0 w-72 h-72 bg-navy/20 rounded-full blur-3xl"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {# ==================== Courses Section ==================== #}
    <section id="courses" class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-fade-in-up">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4" data-i18n="courses.title">
            What We Offer
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-i18n="courses.subtitle">
            Explore our comprehensive range of online courses designed to help you succeed
          </p>
        </div>

        <!-- Courses Slider -->
        <div class="relative" data-slider="courses">
          <div class="slider-container">
            <div class="slider-wrapper">
              {# Course Card Macro #}
              {% macro course_card(id, image, price, title_key, desc_key, title_default, desc_default) %}
              <div class="slider-slide">
                <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2 duration-300">
                  <div class="relative h-56 overflow-hidden">
                    <img src="{{ image }}" alt="{{ title_default }}" class="w-full h-full object-cover transform hover:scale-110 transition-transform duration-500" loading="lazy" />
                    <div class="absolute top-4 right-4 bg-pistachio text-white px-4 py-2 rounded-full font-bold">${{ price }}</div>
                  </div>
                  <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-3" data-i18n="{{ title_key }}">{{ title_default }}</h3>
                    <p class="text-gray-600 mb-4 line-clamp-2" data-i18n="{{ desc_key }}">{{ desc_default }}</p>
                    <button class="w-full py-3 bg-pistachio text-white rounded-full hover:bg-pistachio-dark transition-all hover:shadow-lg" data-i18n="courses.viewDetails">
                      View Details
                    </button>
                  </div>
                </div>
              </div>
              {% endmacro %}

              {% from _self import course_card %}

              {{ course_card(1, 'https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=800&q=80', 299, 'courses.course1.title', 'courses.course1.description', 'Web Development Mastery', 'Learn HTML, CSS, JavaScript, and React from scratch to advanced level') }}
              {{ course_card(2, 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&q=80', 249, 'courses.course2.title', 'courses.course2.description', 'Digital Marketing Pro', 'Master SEO, social media marketing, and paid advertising strategies') }}
              {{ course_card(3, 'https://images.unsplash.com/photo-1626785774573-4b799315345d?w=800&q=80', 199, 'courses.course3.title', 'courses.course3.description', 'Graphic Design Fundamentals', 'Create stunning visuals with Adobe Photoshop, Illustrator, and Figma') }}
              {{ course_card(4, 'https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=800&q=80', 349, 'courses.course4.title', 'courses.course4.description', 'Business Management', 'Learn essential business skills from planning to execution') }}
              {{ course_card(5, 'https://images.unsplash.com/photo-1452587925148-ce544e77e70d?w=800&q=80', 279, 'courses.course5.title', 'courses.course5.description', 'Photography Masterclass', 'From camera basics to professional photo editing techniques') }}
              {{ course_card(6, 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&q=80', 399, 'courses.course6.title', 'courses.course6.description', 'Data Science & Analytics', 'Master Python, SQL, and data visualization for data-driven decisions') }}
            </div>

            <!-- Custom Navigation -->
            <button class="slider-nav-prev absolute top-1/2 z-10 w-12 h-12 bg-white rounded-full flex items-center justify-center hover:bg-pistachio hover:text-white transition-all shadow-lg rtl:right-0 rtl:translate-x-1/2 ltr:left-0 ltr:-translate-x-1/2" aria-label="Previous">
              <svg class="w-6 h-6 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <button class="slider-nav-next absolute top-1/2 z-10 w-12 h-12 bg-white rounded-full flex items-center justify-center hover:bg-pistachio hover:text-white transition-all shadow-lg rtl:left-0 rtl:-translate-x-1/2 ltr:right-0 ltr:translate-x-1/2" aria-label="Next">
              <svg class="w-6 h-6 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </section>

    {# ==================== Statistics Section ==================== #}
