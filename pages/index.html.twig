          ] %}

          {% for stat in stats %}
          <div class="flex flex-col items-center justify-center p-8 bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2 duration-300">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-pistachio to-navy flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {% for path in stat.icon|split('|') %}
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ path }}" />
                {% endfor %}
              </svg>
            </div>
            <div class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
              <span data-counter data-counter-value="{{ stat.value }}" data-counter-suffix="{{ stat.suffix }}">0</span>
            </div>
            <div class="text-gray-600" data-i18n="{{ stat.label_key }}">{{ stat.label }}</div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    {# ==================== Reviews Section ==================== #}
    <section id="reviews" class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-fade-in-up">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4" data-i18n="reviews.title">
            What Our Students Say
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-i18n="reviews.subtitle">
            Real stories from real students who transformed their lives
          </p>
        </div>

        <!-- Reviews Slider -->
        <div class="relative" data-slider="reviews">
          <div class="slider-container">
            <div class="slider-wrapper">
              {# Review Card Macro #}
              {% macro review_card(text, image, name, role) %}
              <div class="slider-slide">
                <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2 duration-300">
                  <div class="flex gap-1 mb-4">
                    {% for i in 1..5 %}
                    <svg class="w-5 h-5 fill-pistachio text-pistachio" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    {% endfor %}
                  </div>
                  <p class="text-gray-700 mb-6 leading-relaxed">"{{ text }}"</p>
                  <div class="flex items-center gap-4">
                    <img src="{{ image }}" alt="{{ name }}" class="w-14 h-14 rounded-full object-cover border-2 border-pistachio" loading="lazy" />
                    <div>
                      <div class="font-bold text-gray-900">{{ name }}</div>
                      <div class="text-sm text-gray-600">{{ role }}</div>
                    </div>
                  </div>
                </div>
              </div>
              {% endmacro %}

              {% from _self import review_card %}

              {{ review_card(
                "This academy changed my life! The instructors are amazing and the content is top-notch. I landed my dream job just 3 months after completing the course.",
                "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=400&q=80",
                "Sarah Johnson", "Web Developer"
              ) }}
              {{ review_card(
                "The best investment I've made in my career. The practical approach and real-world projects prepared me perfectly for the industry.",
                "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&q=80",
                "Ahmed Hassan", "Digital Marketer"
              ) }}
              {{ review_card(
                "Outstanding quality! The course structure is perfect and the support from the community is incredible. Highly recommended!",
                "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=400&q=80",
                "Emily Chen", "Graphic Designer"
              ) }}
              {{ review_card(
                "I've taken several online courses, but this academy stands out. The knowledge I gained helped me grow my business by 300%!",
                "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?w=400&q=80",
                "Michael Brown", "Business Owner"
              ) }}
            </div>

            <!-- Custom Navigation -->
            <button class="slider-nav-prev absolute top-1/2 z-10 w-12 h-12 bg-white rounded-full flex items-center justify-center hover:bg-pistachio hover:text-white transition-all shadow-lg rtl:right-0 rtl:translate-x-1/2 ltr:left-0 ltr:-translate-x-1/2" aria-label="Previous">
              <svg class="w-6 h-6 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <button class="slider-nav-next absolute top-1/2 z-10 w-12 h-12 bg-white rounded-full flex items-center justify-center hover:bg-pistachio hover:text-white transition-all shadow-lg rtl:left-0 rtl:-translate-x-1/2 ltr:right-0 ltr:translate-x-1/2" aria-label="Next">
              <svg class="w-6 h-6 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>

            <!-- Dots -->
            <div class="slider-dots absolute bottom-4 left-1/2 -translate-x-1/2"></div>
          </div>
        </div>
      </div>
    </section>

    {# ==================== Why Choose Us Section ==================== #}
    <section id="about" class="min-h-screen flex items-center py-20 bg-gradient-to-br from-gray-50 to-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-fade-in-up">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4" data-i18n="whyChoose.title">
            Why Choose Us
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-i18n="whyChoose.subtitle">
            Discover what makes our academy the best choice for your learning journey
          </p>
        </div>

        <!-- Features Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
